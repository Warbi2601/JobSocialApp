<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasNavigationBar="false"
             Shell.NavBarIsVisible="false"
             xmlns:app="clr-namespace:JobSocialApp"
             x:Class="JobSocialApp.Views.HomeView">

    <ContentPage.Resources>
        <ResourceDictionary MergedWith="app:StylingResourceDictionary" />
    </ContentPage.Resources>

    <ContentPage.Content>
        <ScrollView Background="White">
            <StackLayout>
                <Label Text="{Binding Title}" FontSize="36"
                    VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="CenterAndExpand" />
                <Image Source="imIn.jpg" />
                <Button BackgroundColor="{StaticResource ThemeColourDarkBlue}" TextColor="{StaticResource WhiteColour}" Text="Test" Clicked="TestClicked" Margin="0,20,0,0" CornerRadius="20"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
